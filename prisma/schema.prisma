datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model TODOList {
  id        Int        @id @default(autoincrement())
  titre     String
  status    String
  items     TODOItem[]
  updatedAt DateTime   @updatedAt
}

model TODOItem {
  id        Int      @id @default(autoincrement())
  libelle   String
  status    String
  listId    Int
  list      TODOList @relation(fields: [listId], references: [id])
}